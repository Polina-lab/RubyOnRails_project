<% unless comment.archived? %>
  <div style="border-left:solid 2px Silver; margin:20px 0px; padding:0 10px;">
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>

    <p style="color: dimgray">
      <em><strong>By:</strong>
      <%= comment.commenter %></em>
    </p>
    <p>
      <%= link_to "Destroy Comment", [comment.article, comment], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </p>
  </div>
<% end %>
