

<table style="margin: auto; width:100%; text-align: left;">
  <tr>
    <th colspan=3><h1><em>Our blog has <%= Article.public_count %> articles, <%= Author.public_count %> authors and counting!</em></h1></th>
  </tr>
  <tr>
    <th><h2>Articles</h2></th>
    <th><h2>Authors</h2></th>
  </tr>

  <tr>
    <td>
      <ul>
        <% @articles.each do |article| %>
          <% unless article.archived? %>
            <li>
              <%= link_to article.title, article %>
            </li>
          <% end %>
        <% end %>
      </ul>

      <span>Other actions: </span>
    
      <%= link_to "New Article", new_article_path %>
    </td>

    <td>
      <h2><%= link_to "Authors", authors_index_path %></h2>

      <ul>
        <% @authors.each do |author| %>
          <% unless author.archived? %>
            <li>
              <%= link_to full_name(author), author %>
            </li>
          <% end %>
        <% end %>
      </ul>

      <span>Other actions: </span>

      <%= link_to "New Author", new_author_path %>
    </td>
  </tr>